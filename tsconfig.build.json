{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "rollup.config.dts.mjs",
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "declaration": false,
    "removeComments": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "lib": [
      "ES2024",
      "DOM",
      "DOM.Iterable",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Promise",
      "ESNext.String",
      "ESNext.Symbol"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
